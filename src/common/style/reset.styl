@charset 'UTF-8'
/* reset */
html,
body,
div,
h1,
h2,
h3,
h4,
h5,
h6,
p,
dl,
dt,
dd,
ol,
ul,
li,
fieldset,
form,
label,
input,
legend,
table,
caption,
tbody,
tfoot,
thead,
tr,
th,
td,
textarea,
article,
aside,
audio,
canvas,
figure,
footer,
header,
mark,
menu,
nav,
section,
time,
video
    margin 0
    padding 0

html
    min-width 1200px

html,
body
    height 100%

h1,
h2,
h3,
h4,
h5,
h6
    font-weight normal
    font-size 100%

body
    background-color #fff
    color #333
    font-size 16px
    font-family 'Microsoft YaHei', 'Helvetica Neue', 'Helvetica', Arial, sans-serif
    line-height 1

article,
aside,
dialog,
figure,
footer,
header,
hgroup,
nav,
section,
blockquote
    display block

ul,
ol
    list-style none

img
    border 0 none
    vertical-align top

table
    border-spacing 0
    border-collapse collapse

strong,
em,
i
    font-weight normal
    font-style normal

ins
    text-decoration underline

del
    text-decoration line-through

mark
    background none

input::-ms-clear
    display none !important

input,
select,
textarea,
button
    outline none
    border 0
    vertical-align middle

input
    border-radius 0
    box-shadow none

input[type='button'],
input[type='submit'],
input[type='reset'],
button
    -webkit-appearance none

textarea
    overflow-x hidden
    overflow-y auto
    resize none
    -webkit-appearance none

/* 如果需要去除掉select元素的默认样式，放开下面的注释即可 */
select
    appearance none
    -ms-appearance none
    -moz-appearance none
    -webkit-appearance none

select::-ms-expand
    display none

a:link,
a:visited
    color #333
    text-decoration none

a:hover,
a:active
    text-decoration none

input:foucs
    outline none
